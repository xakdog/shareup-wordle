{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["esnext", "webworker"],
    "jsx": "preserve",
    "jsxFactory": "preact.h",
    "jsxFragmentFactory": "preact.Fragment",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "exclude": [
    "dist/**/*",
    ".cache/**/*"
  ],
  "include": [
    "public/service-worker.ts",
    "public/background.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
